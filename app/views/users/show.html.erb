<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <% unless @user == current_user  %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
          <% end %>
        <% end %>
        <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
          <%= link_to 'chatを始める', chat_path(@user.id), class: "ml-3" %>
        <% end %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <% if @user != current_user %>
        <h2>投稿数の前日比・毎週比</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日差</th>
              <th>前日比</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td>
                <% @diffrence_day_book= @today_book.count - @yesterday_book.count %>
                <%= @diffrence_day_book %>
              </td>
              <td>
                <% if @yesterday_book.count == 0 %>
                  前日の投稿はありません
                <% else %>
                  <% @the_day_before = @today_book.count / @yesterday_book.count.to_f %>
                  <%= (@the_day_before * 100).round %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>今週の投稿数</th>
              <th>先週の投稿数</th>
              <th>先週差</th>
              <th>前週比</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @this_week_book.count %></td>
              <td><%= @last_week_book.count %></td>
              <td>
                <% @diffrence_week_book= @this_week_book.count - @last_week_book.count %>
                <%= @diffrence_week_book %>
              </td>
              <td>
                <% if @last_week_book.count == 0 %>
                  先週の投稿はありません
                <% else %>
                  <% @the_week_before = @this_week_book.count / @last_week_book.count.to_f %>
                  <%= (@the_week_before * 100).round %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <% else %>
        <h2>7日分の投稿数</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>６日前</th>
              <th>５日前</th>
              <th>４日前</th>
              <th>３日前</th>
              <th>２日前</th>
              <th>昨日</th>
              <th>今日</th>
              <th colspan="7"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @books.created_days_ago(6).count %></td>
              <td><%= @books.created_days_ago(5).count %></td>
              <td><%= @books.created_days_ago(4).count %></td>
              <td><%= @books.created_days_ago(3).count %></td>
              <td><%= @books.created_days_ago(2).count %></td>
              <td><%= @books.created_days_ago(1).count %></td>
              <td><%= @books.created_days_ago(0).count %></td>
            </tr>
          </tbody>
        </table>
        <div class="graph">
          <%= line_chart Book.group_by_day(:created_at, range: 6.days.ago.midnight..Time.now, format: "%a").count %>
        </div>
      <% end %>
    </div>
  </div>
</div>