<% book_comments.each do |book_comment| %>
  <div>
    <%= image_tag book_comment.user.get_profile_image, size: '50x50' %>
    <%= book_comment.user.name %>
    <%= link_to 'Destroy', book_book_comment_path(book.id, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
  </div>
  <div><%=  book_comment.comment %></div>
<% end %>
<%= form_with model: book_comment ,url: book_book_comments_path(book.id), method: :post,  local: false do |f| %>
  <%= f.text_area :comment, class: 'form-control book_comment' %>
  <%= f.submit "送信" %>
<% end %>